<%
var keywords = '';
var description = '';
var ogInfos = {};
(function() {
    if (theme.keywords) {
        keywords += theme.keywords;
        keywords += ',';
    }
    if (page.keywords) {
        keywords += page.keywords;
    }
    if (config.description) {
        description += config.description;
    }
    if (config.twitter) {
        ogInfos.twitter = config.twitter;
    }
    if (config.fb_admins) {
        ogInfos.fb_admins = config.fb_admins;
    }
    if (config.fb_app_id) {
        ogInfos.fb_app_id = config.fb_app_id;
    }
    if  (is_post()) {
        description += ',';
        description += truncate(strip_html(page.content), {length: 60, omission: ','});
    }
})();
%>
<!DOCTYPE html>
<html lang="<%= config.language %>" class="loading">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <meta name="viewport" content="width=device-width, minimum-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title><%= page_title() %></title>
    <meta name="apple-mobile-web-app-capable" content="yes" />
    <meta name="apple-mobile-web-app-status-bar-style" content="black-translucent">
    <% if (theme.no_translate) { %><meta name="google" content="notranslate" /><% } %>
    <%- open_graph(ogInfos) %>
    <% if (keywords) { %><meta name="keywords" content="<%= keywords %>"> <% } %>
    <% if (description) { %><meta name="description" content="<%= description %>"> <% } %>
    <% if (config.author){ %><meta name="author" content="<%= config.author %>"> <% } %>
    <% if (theme.rss){ %><link rel="alternative" href="<%- theme.rss %>" title="<%= config.title %>" type="application/atom+xml"> <% } %>
    <% if (theme.favicon){ %><link rel="icon" href="<%- url_for(theme.favicon) %>"> <% } %>
    <%- css(['css/diaspora.css'])%>
</head>
